"VertexLitGeneric"
{
	"$basetexture" "models/props_junk/hardhat_red"
	"$bumpmap" "models/props_junk/hardhat_normal"
	
	"$envmapcontrast"	"1"
	"$envmap"			"env_cubemap"
    "$envmaptint"		"[.3 .3 .3]"

	"$normalmapalphaenvmapmask" "1"		
	
	"$surfaceprop"		"plastic"
	"$nocull"			"1"
    "$model" 			"1"
	
// -- From here down is new stuff which will only be applied if $phong is set to 1 --

	$phong 					"2"
	$phongexponent			"3"
	$phongboost				"1"
	$phongfresnelranges 	"[0.05 0.5 1]"

// Rim lighting parameters
	"$rimlight"				"1"				// To enable rim lighting (requires phong)
	"$rimlightexponent"		"5"				// Exponent for phong component of rim lighting
	"$rimlightboost"		".5"			// Boost for ambient cube component of rim lighting	
}