"VertexLitGeneric"
{
	"$baseTexture" "models\humans\guards\guard_cigarette"
	 "$bumpmap" 	"models\humans\guards\guard_cigarette_n"
	"$surfaceprop" "plastic"
      "$nocull"      "1"

// -- From here down is new stuff which will only be applied if $phong is set to 1 --
        $phong 1
        $phongexponent 15
        $phongboost 2
        $phongtint "[1 1 1]"
        $halflambert 0
        $phongfresnelranges "[.3.8 10]"

// Rim lighting parameters
	"$rimlight" "1"				// To enable rim lighting (requires phong)
	"$rimlightexponent" "80"             // Exponent for phong component of rim lighting
	"$rimlightboost" ".4"	               // Boost for ambient cube component of rim lighting
}
